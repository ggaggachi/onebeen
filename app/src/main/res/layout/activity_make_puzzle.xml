<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3344A9DF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_layout"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:id="@+id/where_text_filed">

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="어디에서?"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/puzzle_place"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="italic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:id="@+id/todo_text_filed"
            android:layout_below="@id/where_text_filed">

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="할일은?"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/puzzle_todo"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="italic" />
        </RelativeLayout>

        <EditText
            android:id="@+id/puzzle_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/text_area_border"
            android:gravity="center"
            android:hint="소감 한마디"
            android:minHeight="120dp"
            android:layout_below="@id/todo_text_filed"/>

        <LinearLayout
            android:id="@+id/puzzle_image_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/puzzle_description"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/imageView"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:padding="5dp"-->
            <!--android:layout_margin="5dp"-->
            <!--android:contentDescription="이미지 1번" />-->

            <ImageButton
                android:id="@+id/image_add_button1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/area_dashed_border"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/image_add_button2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/area_dashed_border"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/image_add_button3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/area_dashed_border"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <Button
            android:id="@+id/puzzle_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#35c1d6"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="등록" />
    </RelativeLayout>

</LinearLayout>
